<p id="notice"><%= notice %></p>

<h1>Participants List</h1>
<%= will_paginate @participants %>
<table class="list_participant">
  <thead>
    <tr>
	  <th><%= sortable "teams.conference_id", "Conference" %></th>
	  <th><%= sortable "teams.team_name", "Team Name" %></th>
	  <th><%= sortable "accounts.first_name", "First Name" %></th>
	  <th><%= sortable "accounts.last_name", "Last Name" %></th>
	  <th><%= sortable "captain", "Is the Captain?" %></th>
	  <th><%= sortable "waiver_signed", "Waiver Signed?" %></th>
	  <th><%= sortable "shirt_size", "Shirt Size" %></th>
    </tr>
  </thead>

  <tbody>
    <% @participants.each do |participant| %>
      <tr>
	    <td><%= participant.team.conference.start_date %></td>
	    <td><%= participant.team.team_name %></td>
		<td><%= participant.account.first_name %></td>
		<td><%= participant.account.last_name %></td>
        <td><%= participant.captain %></td>
        <td><%= participant.waiver_signed %></td>
        <td><%= participant.shirt_size %></td>
        <td><%= link_to 'Show', participant %></td>
        <td><%= link_to 'Edit', edit_participant_path(participant) %></td>
        <td><%= link_to 'Destroy', participant, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
	
  </tbody>
</table>
<%= will_paginate @participants %>
<br>

<%= link_to 'New Participant', new_participant_path %>
