<%= form_for(@participant) do |f| %>
  <% if @participant.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@participant.errors.count, "error") %> prohibited this participant from being saved:</h2>

      <ul>
      <% @participant.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.fields_for :account_attributes do |ff| %>
	  <div class="field">
		<%= ff.label :first_name %><br>
		<%= ff.text_field :first_name %>
	  </div>
	  <div class="field">
		<%= ff.label :last_name %><br>
		<%= ff.text_field :last_name %>
	  </div>
	  <div class="field">
		<%= ff.label :email %><br>
		<%= ff.text_field :email, :placeholder => "EX. example@domain.com" %>
	  </div>
	  <div class="field">
		<%= ff.label :password %><br>
		<%= ff.password_field :password %>
	  </div>
	  <div class="field">
		<%= ff.label :password_confirmation %><br>
		<%= ff.password_field :password_confirmation %>
	  </div>
  <% end %>
  
    <div class="field">
      <%= f.label :phone %><br>
      <%= f.text_field :phone, :placeholder => "EX. 0123456789" %>
    </div>
    <div class="field">
      <%= f.label :phone_provider %><br>
      <%= f.text_field :phone_provider, :placeholder => "EX. AT&T" %>
    </div>
    <div class="field">
      <%= f.label :shirt_size %><br>
      <%= f.select :shirt_size, options_for_select(%w[XS S M L XL XXL]) %>
    </div>
	<div class"field">
	  <%= f.label :captain %><br>
	  <%= f.check_box :captain %>
	</div>
	<div class"field">
	  <%= f.label :waiver_signed %><br>
	  <%= f.check_box :waiver_signed %>
	</div>
  
  <% if !@team_array.nil? %>
    <div class="field">
	  <%= label_tag :team %><br>
      <%= select :team, :team_name, options_for_select(@team_array) %>
    </div>	 
  <% end %>
  
  <div class="actions">
    <%= f.submit 'Submit', :class => "button round", :style => "color:white" %>
  </div>

<% end %>