<br>
<h3 style='display:inline'>Home Page Entries</h3>
  <%= link_to '', new_pageinfo_path, :class => "i-button-small fi-plus button tiny round", :style => 'color:white;', :title => 'Create a New Pageinfo', :id => "add_pageinfo" %>

<table>
  <thead>
    <tr>
	  <th></th>
      <th>Page</th>
      <th>Body</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @pageinfos.each do |pageinfo| %>
      <tr>
        <td><%= link_to '', pageinfo, { :class => "ibutton-small fi-magnifying-glass", :title => "View Pageinfo", :id => "view#{pageinfo.id}"} %></td>
		<td><%= pageinfo.page %></td>
        <td><%= pageinfo.body %></td>
        <td><%= link_to '', edit_pageinfo_path(pageinfo), { :class => "ibutton-small fi-pencil", :title => "Update Pageinfo", :id => "update#{pageinfo.id}" } %></td>
        <td><%= link_to '', pageinfo, method: :delete, data: { confirm: 'Are you sure?' }, :class => "ibutton-small fi-trash", :title => "Destroy Pageinfo" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

