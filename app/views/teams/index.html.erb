<br>
<h3 style='display:inline'>Registered Teams</h3>
<%= link_to '', new_team_path, :class => "i-button-small fi-plus button tiny round", :style => 'color:white;', :title => 'Create a New Team', :id => "add_team" %>
<table>
  <thead>
    <tr>
      <th></th>
      <th>Team name</th>
      <th>Paid status</th>
      <th>School</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @teams.each do |team| %>
      <tr>
        <td><%= link_to '', team, { :class => "ibutton-small fi-magnifying-glass", :title => "View Team", :id => "view#{team.id}"} %></td>
        <td><%= team.team_name %></td>
        <td><%= team.paid_status %></td>
        <td><%= team.school %></td>
        <td><%= link_to '', team, method: :delete, data: { confirm: 'Are you sure?' }, :class => "ibutton-small fi-trash" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


<%= link_to 'View all Participants', { controller: "participants", method: "index" }, :class => "button round", :style => "color:white" %> 
<%= link_to 'Back to Dashboard', admin_dashboard_url, :class => "button round", :style => "color:white" %>
