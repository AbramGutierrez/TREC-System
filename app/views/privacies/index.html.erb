<h1>Privacy Policy</h1><br />


<% if logged_in? %>

  <% if is_admin? %>

  <table>
  <thead>
    <tr>
      <th>Order</th>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @privacies.each do |privacy| %>
      <tr>
        <td><%= privacy.order %></td>
        <td><%= privacy.title %></td>
        <td><%= privacy.body %></td>
        <td><%= link_to 'Show', privacy %></td>
        <td><%= link_to 'Edit', edit_privacy_path(privacy) %></td>
        <td><%= link_to 'Destroy', privacy, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
  </table>

  <br>

  <%= link_to 'New Privacy', new_privacy_path %>

  <% end %>

<% end %>


<% @privacies.each do |privacy| %>
  <h3><%= privacy.title %></h3>
  <%= privacy.body %>
  <hr />
<% end %>

