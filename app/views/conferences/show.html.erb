<br>
<h3 align="center"><u>
  <%= if @conference.is_active == true 
        'Current Conference Details'
      else
        'This Conference is Currently Inactive'
      end
  %>
</u></h3>

<p>
  <strong>Registration Start Date:</strong>
  <%= @conference.start_date %>
</p>

<p>
  <strong>Registration End Date:</strong>
  <%= @conference.end_date %>
</p>

<p>
  <strong>Conference Start Date:</strong>
  <%= @conference.conf_start_date %>
</p>

<p>
  <strong>Conference End Date:</strong>
  <%= @conference.conf_end_date %>
</p>

<p>
  <strong>Team Size:</strong>
  <%= @conference.min_team_size %> to <%= @conference.max_team_size %>
</p>

<p>
  <strong>Maximum Teams:</strong>
  <%= @conference.max_teams %>
</p>
<% if is_admin? %>
<p>
  <strong>TAMU Student Cost:</strong>
  <%= number_to_currency(@conference.tamu_cost) %>
</p>

<p>
  <strong>Other School Cost:</strong>
  <%= number_to_currency(@conference.other_cost) %>
</p>

<p>
  <strong>Marketplace Link:</strong>
  <%= @conference.marketplace_link %>
</p>
<% end %>
<p>
  <strong>Challenge Description:</strong>
  <%= @conference.challenge_desc %>
</p>
<% if is_admin? %>
<%= link_to 'Update Conference', edit_conference_path(@conference), :class => "button round", :style => "color:white" %> |
<%= link_to 'Back', conferences_path, :class => "button round", :style => "color:white" %>
<% else %>
<%= link_to 'Back to Dashboard', participant_dashboard_url, :class => "button round", :style => "color:white" %>
<%= link_to 'Pay Here', @conference.marketplace_link, :class => "button round", :style => "color:white" %>
<% end %>

<br/>
<% if is_admin? %>
<p align="center"><h2>Statistics</h2></p>
<table>
  <thead>
    <tr>
      <th colspan='6'>Shirt Sizes</th>
    </tr>
    <tr>
      <th>XS</th>
      <th>S</th>
      <th>M</th>
      <th>L</th>
      <th>XL</th>
      <th>XXL</th>
    </tr>
  </thead>

  <tbody>
    <tr>
      <td><%= count_shirts('XS') %></td>
      <td><%= count_shirts('S') %></td>
      <td><%= count_shirts('M') %></td>
      <td><%= count_shirts('L') %></td>
      <td><%= count_shirts('XL') %></td>
      <td><%= count_shirts('XXL') %></td>
    </tr>
  </tbody>
</table>
<% end %>
