<p id="notice"><%= notice %></p>

<p align="center">
  <%= if @conference.is_active == true 
        'This is the current conference'
      else
        'This conference is currently inactive'
      end
  %>
</p>

<p>
  <strong>Registration Start Date:</strong>
  <%= @conference.start_date %>
</p>

<p>
  <strong>Registration End Date:</strong>
  <%= @conference.end_date %>
</p>

<p>
  <strong>Conference Start Date:</strong>
  <%= @conference.conf_start_date %>
</p>

<p>
  <strong>Conference End Date:</strong>
  <%= @conference.conf_end_date %>
</p>

<p>
  <strong>Team Size:</strong>
  <%= @conference.min_team_size %> - <%= @conference.max_team_size %>
</p>

<p>
  <strong>Maximum Teams:</strong>
  <%= @conference.max_teams %>
</p>

<p>
  <strong>TAMU Student Cost:</strong>
  <%= number_to_currency(@conference.tamu_cost) %>
</p>

<p>
  <strong>Other School Cost:</strong>
  <%= number_to_currency(@conference.other_cost) %>
</p>

<p>
  <strong>Challenge Description:</strong>
  <%= @conference.challenge_desc %>
</p>

<%= link_to 'Edit', edit_conference_path(@conference) %> |
<%= link_to 'Back', conferences_path %>

<br/>

<p align="center"><h2>Statistics</h2></p>
<table>
  <thead>
    <tr>
      <th colspan='5'>Shirt Sizes</th>
    </tr>
    <tr>
      <th>XS</th>
      <th>S</th>
      <th>M</th>
      <th>L</th>
      <th>XL</th>
    </tr>
  </thead>

  <tbody>
    <tr>
      <td><%= count_shirts('X-small') %></td>
      <td><%= count_shirts('Small') %></td>
      <td><%= count_shirts('Medium') %></td>
      <td><%= count_shirts('Large') %></td>
      <td><%= count_shirts('X-large') %></td>
    </tr>
  </tbody>
</table>
