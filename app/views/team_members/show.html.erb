<h1>Show team members</h1>

<% @participants.each do |participant| %>
	<% @id = participant.id %>
	<p>
		<% @account = Account.find_by user_id: @id %>
		<%= @account.first_name %>
		<%= @account.last_name %>
		<% if is_admin? %>
			| <%= link_to "Edit", [:edit, participant] %>
		<% end %>
		| <%= link_to "Remove", participant, method: :delete, data: { confirm: "Remove #{@account.first_name} #{@account.last_name} from the team?" } %>
	</p>
<% end %>



<%= link_to "Add new team member", controller: "participants", action: "new" %> | <%= link_to 'Back', :back %>
