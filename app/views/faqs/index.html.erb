<h1>FAQs</h1>

<% if logged_in? %>

  <% if is_admin? %>

  <table>
  <thead>
    <tr>
      <th>Order</th>
      <th>Question</th>
      <th>Answer</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @faqs.each do |faq| %>
      <tr>
        <td><%= faq.order %></td>
        <td><%= faq.question %></td>
        <td><%= faq.answer %></td>
        <td><%= link_to 'Show', faq %></td>
        <td><%= link_to 'Edit', edit_faq_path(faq) %></td>
        <td><%= link_to 'Destroy', faq, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
  </table>

  <br>

  <%= link_to 'New Faq', new_faq_path %>

  <% end %>

<% end %>

<% if !(logged_in?) || is_participant? %>

<% @faqs.each do |faq| %>
  <%= faq.question %>
  <%= faq.answer %>
  <hr />
<% end %>

<% end %>

