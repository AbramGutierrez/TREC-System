<h1>Terms of Use</h1><br />

<% if logged_in? %>

  <% if is_admin? %>

  <table>
  <thead>
    <tr>
      <th>Order</th>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @terms.each do |term| %>
      <tr>
        <td><%= term.order %></td>
        <td><%= term.title %></td>
        <td><%= term.body %></td>
        <td><%= link_to 'Show', term %></td>
        <td><%= link_to 'Edit', edit_term_path(term) %></td>
        <td><%= link_to 'Destroy', term, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
  </table>

  <br>

  <%= link_to 'New Term', new_term_path %>

  <% end %>

<% end %>




<% @terms.each do |term| %>
  <h3><%= term.title %></h3>
  <%= term.body %>
  <hr />
<% end %>

