<h1>Listing Sponsors</h1>

<table>
  <thead>
    <tr>
      <th>Sponsor Name</th>
      <th>Logo</th>
      <th>Priority</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sponsors.each do |sponsor| %>
      <tr>
        <td><%= sponsor.sponsor_name %></td>
        <td><%= image_tag(sponsor.logo_path_url.to_s, size: "100") %></td>
        <td><%= sponsor.priority %></td>
        <td><%= link_to 'Show', sponsor %></td>
        <td><%= link_to 'Edit', edit_sponsor_path(sponsor) %></td>
        <td><%= link_to 'Destroy', sponsor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Sponsor', new_sponsor_path, :class => "button round" %>
<%= link_to 'Back to Dashboard', admin_dashboard_url, :class => "button round" %>
