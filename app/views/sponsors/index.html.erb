<br/>
<h3 style='display:inline'>Current Sponsors</h3>
<%= link_to '', new_sponsor_path, :class => "i-button-small fi-plus button tiny round", :style => 'color:white;', :title => 'Add a Sponsor' %>

<table>
  <thead>
    <tr>
      <th></th>
      <th>Sponsor Name</th>
      <th>Logo</th>
      <th>Priority</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @sponsors.each do |sponsor| %>
      <tr>
        <td><%= link_to '', sponsor, { :class => "ibutton-small fi-magnifying-glass", :title => "View Sponsor" } %></td>
        <td><%= sponsor.sponsor_name %></td>
        <td><%= image_tag(sponsor.logo_path_url.to_s, size: "100") %></td>
        <td><%= sponsor.priority %></td>
        
        <td><%= link_to '', edit_sponsor_path(sponsor), { :class => "ibutton-small fi-pencil", :title => "Update Sponsor" } %></td>
        <td><%= link_to '', sponsor, method: :delete, data: { confirm: 'Are you sure you want to remove this sponsor?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'Back to Dashboard', admin_dashboard_url, :class => "button round", :style => 'color:white;' %>
