<%= form_for @sponsor, :html => {:multipart => true} do |f| %>
  <% if @sponsor.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@sponsor.errors.count, "error") %> prohibited this sponsor from being saved:</h2>

      <ul>
      <% @sponsor.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label "Conference Start Date" %><br>
    <%= f.select :conference, options_for_select(@conference_array)  %>
  </div>
  
  <div class="field">
    <%= f.label :sponsor_name %><br>
    <%= f.text_field :sponsor_name %>
  </div>
  
  <div class="field">
    <%= f.label "Upload Logo" %><br>
    <%= f.file_field :logo_path %>
  </div>
  
  <div class="field">
    <%= f.label "Enter sponsor website URL" %><br>
     <%= f.text_field :website_url %>
  </div>
  
  <div class="field">
    <%= f.label "Priority [1-4] [1 = Platinum, 2 = Gold, 3 = Silver, 4 = Bronze]" %><br>
    <%= f.number_field :priority %>
  </div>
  
  <div class="actions">
    <%= f.submit 'Submit', :class => "button round", :style => "color:white"  %>
  </div>
  
<% end %>